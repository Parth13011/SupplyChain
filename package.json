{
  "name": "blockchain-supply-chain",
  "version": "1.0.0",
  "description": "Blockchain-based Supply Chain Management System",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:ipfs": "BUILD_FOR_IPFS=true next build && node scripts/fix-ipfs-paths.js",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:custom": "hardhat run scripts/deploy-custom.js --network custom",
    "deploy:custom:simple": "hardhat run scripts/deploy-custom-simple.js --network custom",
    "deploy:ipfs": "node scripts/deploy-to-ipfs.mjs",
    "deploy:all": "npm run deploy:custom && npm run build:ipfs && npm run deploy:ipfs",
    "check:network": "hardhat run scripts/check-network.js --network custom",
    "setup:local": "hardhat run scripts/setup-local.js --network localhost",
    "test:flow": "hardhat run scripts/test-full-flow.js --network localhost",
    "verify": "hardhat run scripts/verify-contracts.js --network localhost",
    "check": "hardhat run scripts/check-deployment.js --network localhost",
    "verify:didlab": "node scripts/verify-didlab-contracts.js",
    "node": "hardhat node"
  },
  "dependencies": {
    "@metamask/detect-provider": "^2.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.8.0",
    "html5-qrcode": "^2.3.8",
    "ipfs-http-client": "^60.0.1",
    "next": "^14.0.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-code": "^2.0.18",
    "web3": "^4.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "glob": "^13.0.0",
    "hardhat": "^2.19.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0"
  }
}
